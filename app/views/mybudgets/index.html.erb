<div class="row">
  <%= link_to new_mybudget_path(@mybudget), 
   remote: true, id: "new-item-link", class: "btn btn-sm btn-default round" do %>New Budget
  <%end%>

	 <table class="table">
   <thead>
    <tr>
     <th>Name</th>
     <th>Opening Balance</th>
     <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
    <% @mybudget.each do |mybudget| %>
     <tr>
      <td><%= mybudget.name %></td>
      <td><%= mybudget.open_bal, :step => 0.01 %></td> 
     </tr>
    <% end %>
   </tbody>
  </table>

 <!-- Modal form -->
 <div class="modal fade" id='new-budget-modal-form' role='dialog'></div>
 <!-- Modal form -->
</div>
